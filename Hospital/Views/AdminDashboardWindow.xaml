<Window
    x:Class="Hospital.Views.AdminDashboardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hospital.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top navigation bar -->
        <Grid Grid.Row="0" Background="#003366" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Admin Dashboard" 
                       FontSize="24" FontWeight="SemiBold" 
                       VerticalAlignment="Center" Margin="20,0,0,0" 
                       Foreground="White"/>

            <Button Grid.Column="1" x:Name="LogoutButton" 
                    Content="Logout" Margin="0,0,20,0" 
                    Background="Transparent" Foreground="White"
                    Click="LogoutButton_Click"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Log Filters Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Log Management" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- User Search -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Search by User ID:" Margin="0,0,0,5"/>
                        <TextBox x:Name="UserIdTextBox" PlaceholderText="Enter user ID"/>
                    </StackPanel>

                    <!-- Action Type Filter -->
                    <StackPanel Grid.Column="1" Margin="10,0,10,0">
                        <TextBlock Text="Filter by Action:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ActionTypeComboBox" Width="150" PlaceholderText="Select action type"/>
                    </StackPanel>

                    <!-- Date Filter -->
                    <StackPanel Grid.Column="2" Margin="10,0,10,0">
                        <TextBlock Text="Before Date:" Margin="0,0,0,5"/>
                        <DatePicker x:Name="TimestampDatePicker"/>
                    </StackPanel>

                    <!-- Apply Filters Button -->
                    <StackPanel Grid.Column="3" Margin="10,0,0,0" VerticalAlignment="Bottom">
                        <Button x:Name="ApplyFiltersButton" Content="Apply Filters" Command="{x:Bind loggerViewModel.ApplyAllFiltersCommand}"/>
                    </StackPanel>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Button x:Name="LoadAllLogsButton" Content="Load All" Command="{x:Bind loggerViewModel.LoadAllLogsCommand}" Margin="0,0,10,0"/>
                    <Button x:Name="LoadLogsByUserIdButton" Content="Filter Logs by ID" Command="{x:Bind loggerViewModel.FilterLogsByUserIdCommand}" Margin="0,0,10,0"/>
                    <Button x:Name="LoadLogsByActionTypeButton" Content="Filter Logs by Action Type"  Command="{x:Bind loggerViewModel.FilterLogsByActionTypeCommand}" Margin="0,0,10,0"/>
                    <Button x:Name="LoadLogsBeforeTimestampButton" Content="Filter Logs by Time" Command="{x:Bind loggerViewModel.FilterLogsByTimestampCommand}" />
                </StackPanel>
            </StackPanel>

            <!-- Logs ListView -->
            <ListView Grid.Row="1" x:Name="LogListView" 
                      BorderBrush="#003366" BorderThickness="1"
                      Padding="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding LogId}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding UserId}"/>
                            <TextBlock Grid.Column="2" Text="{Binding ActionType}"/>
                            <TextBlock Grid.Column="3" Text="{Binding Timestamp}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="10" Background="#003366">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Log ID" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="User ID" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="Action Type" FontWeight="Bold"/>
                            <TextBlock Grid.Column="3" Text="Timestamp" FontWeight="Bold"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>